' Gambas module file

Public Sub Main()

  Dim aDependencyCheck As New String[]

  If Not MUtil.CommandInPath("file") Then aDependencyCheck.Add("file")
  If Not MUtil.CommandInPath("iconv") Then aDependencyCheck.Add("iconv")

  If aDependencyCheck.Length > 0 Then
    Message.Title = ("Error")
    Message.Error(Subst(("Dependency not satisfied, please install\n&1."), aDependencyCheck.Join(", ")))
  Else
    FMain.Run()
  Endif

End