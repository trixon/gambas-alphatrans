# Gambas Form File 3.0

{ Form Form
  MoveScaled(0,0,105,45)
  Arrangement = Arrange.Vertical
  { mnuFile Menu
    Text = ("File")
    { mnuOpen Menu
      Action = "open"
      Text = ("Open")
      Shortcut = "Ctrl+O"
    }
    { mnuClose Menu
      Action = "close"
      Text = ("Close")
      Enabled = False
      Shortcut = "Ctrl+W"
    }
    { mnuSave Menu
      Action = "save"
      Text = ("Save")
      Shortcut = "Ctrl+S"
    }
    { Menu1 Menu
    }
    { mnuQuit Menu
      Action = "quit"
      Text = ("Quit")
      Shortcut = "Ctrl+Q"
    }
  }
  { mnuView Menu
    Text = ("View")
    { mnuViewMenu Menu
      Action = "menubar"
      Text = ("Hide menubar")
      Shortcut = "Ctrl+Alt+M"
    }
  }
  { mnuHelp Menu
    Text = ("Help")
    { mnuAbout Menu
      Action = "about"
      Text = ("About")
    }
  }
  { ToolBar1 ToolBar
    MoveScaled(0,0,88,4)
    Key = "MainToolbar"
    Text = ("ToolBar1")
    { chkOmit CheckBox
      MoveScaled(0,0,8,4)
      ToolTip = ("Omit invalid characters from output.")
      AutoResize = True
      Text = ("Omit")
    }
    { lblMode Label
      MoveScaled(9,1,24,4)
      AutoResize = True
      Text = ("Mode:")
    }
    { optNormal RadioButton
      MoveScaled(20,1,24,4)
      AutoResize = True
      Text = ("Normal")
      Value = True
    }
    { optTranslit RadioButton
      MoveScaled(46,1,24,4)
      AutoResize = True
      Text = ("Translit")
    }
    { optIgnore RadioButton
      MoveScaled(61,1,24,4)
      AutoResize = True
      Text = ("Ignore")
    }
  }
  { HSplit1 HBox
    MoveScaled(-1,3,98,34)
    Expand = True
    { Panel2 VBox
      MoveScaled(1,6,17,26)
      Expand = True
      { lblFile Label
        MoveScaled(1,1,24,4)
        Padding = 2
        AutoResize = True
        Text = ("File:")
      }
      { txaFrom TextArea
        MoveScaled(0,5,16,21)
        Font = Font["Monospace"]
        Expand = True
        ReadOnly = True
      }
    }
    { Panel1 VBox
      MoveScaled(20,6,14,22)
      { Label4 Label
        MoveScaled(1,1,24,4)
        Padding = 2
        AutoResize = True
        Text = ("From")
      }
      { lstFrom ListBox Preview
        Name = "lstFrom"
        MoveScaled(1,4,11,16)
        Expand = True
      }
    }
    { Panel3 VBox
      MoveScaled(45,6,14,22)
      { Label5 Label
        MoveScaled(1,0,24,4)
        Padding = 2
        AutoResize = True
        Text = ("To")
      }
      { lstTo ListBox Preview
        Name = "lstTo"
        MoveScaled(1,3,11,16)
        Expand = True
      }
    }
    { VBox1 VBox
      MoveScaled(72,6,24,24)
      Expand = True
      { Label3 Label
        MoveScaled(1,1,24,4)
        Padding = 2
        AutoResize = True
        Text = ("Preview")
      }
      { txaTo TextArea
        MoveScaled(1,4,17,26)
        Font = Font["Monospace"]
        Expand = True
        ReadOnly = True
      }
    }
  }
  { lblStatus Label
    MoveScaled(56,39,24,4)
    Padding = 4
    AutoResize = True
    Text = ("Label1")
    Border = Border.Sunken
  }
}

